<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="right|bottom"
        android:paddingRight="32dp"
        >

        <ImageView
            android:id="@+id/btn_grid_talbum"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_grid_on_24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            />

        <ImageView
            android:id="@+id/btn_list_talbum"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_format_list_bulleted_24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            />

        <ImageView
            android:id="@+id/btn_download_monthly_talbum"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_file_download_24dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Spinner
            android:id="@+id/spinner_class_talbum"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_marginRight="16dp"></Spinner>

        <Spinner
            android:id="@+id/spinner_kids_talbum"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginRight="16dp"></Spinner>

        <Spinner
            android:id="@+id/spinner_month_talbum"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_marginRight="16dp"></Spinner>


    </LinearLayout>


</LinearLayout>