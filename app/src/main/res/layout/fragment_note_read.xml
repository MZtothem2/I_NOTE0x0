<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<!--contents-->
    <!--1.가정에서 기관으로-->
    <LinearLayout
        android:id="@+id/layout_pnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        >
        <!--1-1 제목-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="가정에서 기관으로"
            android:textSize="16sp"
            android:background="#EEEEEE"
            />

        <!--1-2 컨디션들-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="4dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="기분 :"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_pnote_chekc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="아침식사 :"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_pnote_chekc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="투약 : "
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_pnote_chekc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="하원 :"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_pnote_return_adult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_pnote_return_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="4dp"
                />

        </LinearLayout>
        <!--구분선-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/option_back"
            />
        <!--1-3 알림장내용-->
        <LinearLayout
            android:id="@+id/layout_pnote_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_p_edit"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="수정 / 삭제"
                android:textSize="10dp"
                android:background="@drawable/rounded_corner_palegr"
                android:padding="2dp"
                android:gravity="center"
                android:clickable="true"
                android:layout_gravity="right"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_pnote"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#FFFFFF"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_writetime_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[2019년 3월 3일 08:30 작성]"
                android:textSize="10sp"
                android:textStyle="italic"
                android:gravity="right"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </LinearLayout>
    <!--end 1-->


    <!--2.기관에서 가정으로-->
    <LinearLayout
        android:id="@+id/layout_tnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"
        android:background="#FFFFFF"
        >
        <!--2-1 제목-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="기관에서 가정으로"
            android:textSize="16sp"
            android:background="#EEEEEE"
            />

        <!--2-2 컨디션들-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="4dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="점심식사 :"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_tnote_check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="기분 :"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_tnote_check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="배변 :"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_tnote_check3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="16dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="낮잠 :"
                android:textSize="16sp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_tnote_check4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginRight="4dp"
                />

        </LinearLayout>
        <!--구분선-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/option_back"
            />
        <!--2-3 알림장내용-->
        <LinearLayout
            android:id="@+id/layout_tnote_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/btn_t_edit"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="수정 / 삭제"
                android:textSize="10dp"
                android:background="@drawable/rounded_corner_palegr"
                android:padding="2dp"
                android:gravity="center"
                android:clickable="true"
                android:layout_gravity="right"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_tnote"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#FFFFFF"
                android:textSize="16sp"
                />

        </LinearLayout>

    </LinearLayout>
    <!--end 2-->



<!--contents end-->
</LinearLayout>
</ScrollView>