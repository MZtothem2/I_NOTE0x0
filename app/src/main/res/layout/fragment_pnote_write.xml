<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="15"
    android:background="#FFFFFF"
    tools:context=".PNoteWriteFragment">


    <!--1줄 : 식사여부-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@color/option_back"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="기분"
            android:textSize="14sp"
            />
        <RadioGroup
            android:id="@+id/rbgroup1_pwrite"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbtn_pwrite11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="좋음"
                android:textSize="16sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />
            <RadioButton
                android:id="@+id/rbtn_pwrite12"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="보통"
                android:textSize="16sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />
            <RadioButton
                android:id="@+id/rbtn_pwrite13"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="나쁨"
                android:textSize="16sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />
        </RadioGroup>
    </LinearLayout>

    <!--2줄 : 배변여부 라디오버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@color/option_back"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="아침식사"
            android:textSize="16sp"
            />
        <RadioGroup
            android:id="@+id/rbgroup2_pwrite"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbtn_pwrite21"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="많이"
                android:textSize="16sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />
            <RadioButton
                android:id="@+id/rbtn_pwrite22"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="보통"
                android:textSize="16sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />
            <RadioButton
                android:id="@+id/rbtn_pwrite23"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="적게2ㅇㅈㅇ"
                android:textSize="16sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />
        </RadioGroup>
    </LinearLayout>

    <!--3줄 : 투약신청 라디오버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal"
        android:background="@color/option_back"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="투약신청"
            android:textSize="16sp"
            />
        <RadioGroup
            android:id="@+id/rbgroup3_pwrite"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rbtn_pwrite31"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Ｏ"
                android:textSize="16sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />
            <RadioButton
                android:id="@+id/rbtn_pwrite32"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="22sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:visibility="invisible"
                />
            <RadioButton
                android:id="@+id/rbtn_pwrite33"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Ｘ"
                android:textSize="16sp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                />
        </RadioGroup>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <EditText
            android:id="@+id/et_pwrite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:focusedByDefault="false"
            android:background="@null"
            android:hint="오늘의 알림장 내용을 적어주세요."/>
    </ScrollView>

    <TextView
        android:id="@+id/btn_attatch_p"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="사진첨부"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/option_back"
        android:clickable="true"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/btn_submit_p"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="등록"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/text_menu"
        android:clickable="true"
        />
</LinearLayout>