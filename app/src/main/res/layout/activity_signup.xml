<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical"
    android:weightSum="10"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingLeft="24dp"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_00leaf"
            android:layout_marginRight="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="24sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        ></RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="9"
        android:gravity="center"
        >
        <RadioGroup
            android:id="@+id/rbg_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_grade1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원장"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginHorizontal="8dp"
                />
            <RadioButton
                android:id="@+id/rb_grade2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교사"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginHorizontal="8dp"
                />
            <RadioButton
                android:id="@+id/rb_grade3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호자"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginHorizontal="8dp"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="9"
        android:gravity="bottom"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="메일"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:id="@+id/et_mail_signup"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="9"
        android:gravity="bottom"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:id="@+id/et_name_signup"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="9"
        android:gravity="bottom"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:id="@+id/et_pw_signup"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="9"
        android:gravity="bottom"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:id="@+id/et_chekcpw_signup"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="9"
        android:gravity="bottom"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="기관"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_marginRight="8dp"
            />
        <EditText
            android:id="@+id/et_organization_signup"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="회원가입 신청"
            android:textSize="16sp"
            android:textColor="@color/text_menu"
            android:backgroundTint="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:onClick="clickApplyButton"
            />
    </RelativeLayout>


</LinearLayout>