<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestmodeActivity"
    android:background="@color/colorPrimary"
    android:padding="30dp"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_00leaf"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            />

        <Button
            android:id="@+id/btn_directormode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#FFFFFF"
            android:text="원장 체험하기"
            android:onClick="clickTrial"
            />

        <Button
            android:id="@+id/btn_teacherormode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#FFFFFF"
            android:text="교사 체험하기"
            android:onClick="clickTrial"
            />

        <Button
            android:id="@+id/btn_parentmode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#FFFFFF"
            android:text="보호자 체험하기"
            android:onClick="clickTrial"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</RelativeLayout>