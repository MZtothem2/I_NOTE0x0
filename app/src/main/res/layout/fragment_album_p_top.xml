<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="16dp"
    android:gravity="center"
    >

    <Spinner
        android:id="@+id/spinner_month_palbum"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"></Spinner>

    <ImageView
        android:id="@+id/btn_grid_palbum"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_grid_on_24dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />

    <ImageView
        android:id="@+id/btn_list_palbum"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_format_list_bulleted_24dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />

    <ImageView
        android:id="@+id/btn_download_monthly_palbum"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_file_download_24dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        />
</LinearLayout>